# Trading Engine Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# Blockchain Data Providers
# ============================================================================

# Alchemy API Key (Required for DEX streaming)
# Get your free API key at: https://dashboard.alchemy.com
ALCHEMY_API_KEY=your_alchemy_api_key_here

# ============================================================================
# Cloud Infrastructure (Optional - for deployment)
# ============================================================================

# Hetzner Cloud API Token
# Get from: https://console.hetzner.cloud/ → Security → API Tokens
HETZNER_API_KEY=your_hetzner_api_key_here

# Server IP (auto-populated by deployment script)
HETZNER_SERVER_IP=116.203.216.207

# ============================================================================
# Exchange API Keys (Optional - for trading execution)
# ============================================================================

# Binance API Credentials
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# Bybit API Credentials
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET_KEY=your_bybit_secret_key

# ============================================================================
# Notifications (Optional)
# ============================================================================

# SendGrid API Key (for email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key

# Email addresses for notifications
NOTIFICATION_EMAIL=your-email@example.com

# ============================================================================
# Application Settings
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000
