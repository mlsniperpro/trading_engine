# Trading Engine Environment Variables
# Copy this file to .env and fill in your actual API keys

# ===========================================
# REQUIRED API KEYS
# ===========================================

# 1inch DEX Aggregator (REQUIRED for EVM chains)
# Get your API key from: https://portal.1inch.dev/
ONEINCH_API_KEY=your_1inch_api_key_here

# SendGrid Email API (REQUIRED for notifications)
# Get your API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ===========================================
# OPTIONAL API KEYS
# ===========================================

# Jupiter DEX Aggregator (OPTIONAL - Solana trading)
# Jupiter works without API key but rate limits apply
JUPITER_API_KEY=your_jupiter_api_key_here

# Binance Exchange API (OPTIONAL - CEX trading)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here
BINANCE_TESTNET=true

# ===========================================
# TRADING CONFIGURATION
# ===========================================

# Environment (development/staging/production)
ENVIRONMENT=development

# Log level (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Database configuration
DATABASE_PATH=./data/trading_engine.db

# ===========================================
# RISK MANAGEMENT
# ===========================================

# Maximum position size in USD
MAX_POSITION_SIZE_USD=10000

# Maximum daily trading volume in USD
MAX_DAILY_VOLUME_USD=100000

# Default slippage tolerance in basis points (50 = 0.5%)
DEFAULT_SLIPPAGE_BPS=50

# Maximum slippage tolerance in basis points (300 = 3%)
MAX_SLIPPAGE_BPS=300

# ===========================================
# STRATEGY PARAMETERS
# ===========================================

# Enable/disable bid-ask bounce strategy
BID_ASK_BOUNCE_ENABLED=true

# Trading pairs for bid-ask bounce strategy (comma-separated)
BID_ASK_BOUNCE_PAIRS=BTCUSDT,ETHUSDT,SOLUSDT

# Minimum spread in basis points to trade (10 = 0.1%)
MIN_SPREAD_BPS=10

# Maximum spread in basis points to trade (500 = 5%)
MAX_SPREAD_BPS=500

# ===========================================
# MEMPOOL & MEV PROTECTION
# ===========================================

# Enable MEV protection
MEV_PROTECTION_ENABLED=true

# Minimum transaction value to monitor (USD)
MEV_MIN_VALUE_USD=1000

# Gas price monitoring interval (seconds)
GAS_MONITOR_INTERVAL=15

# ===========================================
# NOTIFICATION SETTINGS
# ===========================================

# Email for trading alerts
ALERT_EMAIL=your_email@example.com

# Webhook URL for alerts (optional)
WEBHOOK_URL=https://your-webhook-url.com/alerts

# ===========================================
# BLOCKCHAIN RPCS (OPTIONAL - uses defaults if not set)
# ===========================================

# Ethereum RPC URL
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your_key

# Polygon RPC URL
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your_key

# Solana RPC URL
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Arbitrum RPC URL
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your_key

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug mode
DEBUG=false

# Enable paper trading (no real orders)
PAPER_TRADING=true

# API server port
API_PORT=8000

# API host
API_HOST=0.0.0.0

# ===========================================
# SECURITY SETTINGS
# ===========================================

# JWT secret for API authentication (generate a random string)
JWT_SECRET=your_super_secret_jwt_key_here

# API rate limit (requests per minute)
API_RATE_LIMIT=100

# Enable CORS for web interface
CORS_ENABLED=true

# ===========================================
# MONITORING & TELEMETRY
# ===========================================

# Enable metrics collection
METRICS_ENABLED=true

# Metrics export interval (seconds)
METRICS_INTERVAL=60

# Enable performance profiling
PROFILING_ENABLED=false

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id